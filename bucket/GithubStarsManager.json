{
    "version": "0.1.8",
    "description": "An app for managing GitHub starred repositories with AI-powered analysis",
    "homepage": "https://github.com/AmintaCCCP/GithubStarsManager",
    "license": "MIT",
    "notes": [
        "GitHub Stars Manager 是一个管理 GitHub Star 仓库的工具",
        "用户数据目录：%APPDATA%\\GitHub Stars Manager\\",
        "包含: GitHub token、仓库数据、AI配置、WebDAV配置等",
        "本包会将该目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/AmintaCCCP/GithubStarsManager/releases/download/v0.1.8/GitHub.Stars.Manager.Setup.0.1.8.exe#/dl.7z",
            "hash": "3e03608b3a9548e914ed660332f4a7e56a96f962ba701c1246e9203addc50c9a"
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\" -Removal",
        "Remove-Item \"$dir\\`$*\" -Force -Recurse -ErrorAction SilentlyContinue"
    ],
    "bin": "GitHub Stars Manager.exe",
    "shortcuts": [
        [
            "GitHub Stars Manager.exe",
            "GitHub Stars Manager"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:APPDATA 'GitHub Stars Manager'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/AmintaCCCP/GithubStarsManager"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/AmintaCCCP/GithubStarsManager/releases/download/v$version/GitHub.Stars.Manager.Setup.$version.exe#/dl.7z"
            }
        }
    }
}
