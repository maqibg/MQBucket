{
    "version": "0.16.0",
    "description": "An ultra-lightweight open-source AI Markdown editor built with Tauri v2, featuring local AI integration and MCP ecosystem",
    "homepage": "https://github.com/zouwei/moraya",
    "license": "Apache-2.0",
    "notes": [
        "Moraya 是一个超轻量级开源 AI Markdown 编辑器，集成本地 AI 和 MCP 生态",
        "用户数据目录：%LOCALAPPDATA%\\com.moraya.app\\",
        "  - settings.json : 编辑器设置、AI 配置、发布目标等",
        "本包会将该目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/zouwei/moraya/releases/download/v0.16.0/Moraya_0.16.0_x64-setup.exe#/dl.7z",
            "hash": "449de12f0bbad5819ba0124e30407faa1adac1a92f6a2240d94a76d0e6a1ee4c"
        }
    },
    "pre_install": "Remove-Item \"$dir\\`$*\", \"$dir\\uninstall.exe\" -Force -Recurse -ErrorAction SilentlyContinue",
    "bin": "moraya.exe",
    "shortcuts": [
        [
            "moraya.exe",
            "Moraya"
        ]
    ],
    "post_install": [
        "$source = Join-Path $env:LOCALAPPDATA 'com.moraya.app'",
        "$target = Join-Path $persist_dir 'data'",
        "ensure $target",
        "",
        "if (Test-Path $source) {",
        "    $item = Get-Item -LiteralPath $source -Force",
        "    if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "        Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "        return",
        "    }",
        "    if (-not $item.PSIsContainer) {",
        "        throw \"配置路径已存在且不是目录：$source\"",
        "    }",
        "",
        "    & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "    if ($LASTEXITCODE -gt 7) {",
        "        Write-Host \"迁移失败，保留原目录：$source\"",
        "        return",
        "    }",
        "",
        "    $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "    try {",
        "        Move-Item -LiteralPath $source -Destination $backup -Force",
        "        Write-Host \"已备份原配置目录：$backup\"",
        "    } catch {",
        "        Write-Host \"无法重命名原目录：$source\"",
        "        return",
        "    }",
        "}",
        "",
        "New-Item -Path $source -ItemType Junction -Value $target | Out-Null"
    ],
    "persist": "data",
    "checkver": {
        "github": "https://github.com/zouwei/moraya"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zouwei/moraya/releases/download/v$version/Moraya_$version_x64-setup.exe#/dl.7z"
            }
        }
    }
}
