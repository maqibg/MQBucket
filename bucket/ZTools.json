{
    "version": "2.2.0",
    "description": "A powerful productivity launcher with plugin support - open-source alternative to uTools",
    "homepage": "https://github.com/ZToolsCenter/ZTools",
    "license": "MIT",
    "notes": [
        "ZTools 是一个支持插件的效率启动器",
        "用户数据目录：%APPDATA%\\ZTools\\",
        "  - lmdb\\     : 数据库（设置、历史记录等）",
        "  - plugins\\  : 用户安装的插件",
        "  - clipboard\\ : 剪贴板图片缓存",
        "本包会将以上目录持久化到 Scoop 的 persist，并在原路径创建 Junction 指向 persist"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/ZToolsCenter/ZTools/releases/download/v2.2.0/ZTools-2.2.0-win-x64.zip",
            "hash": "f60d34f93240a083f6bc138c76c7e2572dbdf7d55390692c2bbd02108943cc2b"
        }
    },
    "bin": "ZTools.exe",
    "shortcuts": [
        [
            "ZTools.exe",
            "ZTools"
        ]
    ],
    "post_install": [
        "$createJunction = {",
        "    param($source, $name)",
        "    $target = Join-Path $persist_dir $name",
        "    ensure $target",
        "",
        "    if (Test-Path $source) {",
        "        $item = Get-Item -LiteralPath $source -Force",
        "        if ($item.Attributes -band [IO.FileAttributes]::ReparsePoint) {",
        "            Write-Host \"检测到已存在的联接点：$source，跳过创建\"",
        "            return",
        "        }",
        "        if (-not $item.PSIsContainer) {",
        "            throw \"配置路径已存在且不是目录：$source\"",
        "        }",
        "",
        "        & robocopy $source $target /E /R:1 /W:1 /NFL /NDL /NJH /NJS /NP | Out-Null",
        "        if ($LASTEXITCODE -gt 7) {",
        "            Write-Host \"迁移失败，保留原目录：$source\"",
        "            return",
        "        }",
        "",
        "        $backup = \"$source.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss')\"",
        "        try {",
        "            Move-Item -LiteralPath $source -Destination $backup -Force",
        "            Write-Host \"已备份原配置目录：$backup\"",
        "        } catch {",
        "            Write-Host \"无法重命名原目录：$source\"",
        "            return",
        "        }",
        "    }",
        "",
        "    New-Item -Path $source -ItemType Junction -Value $target | Out-Null",
        "}",
        "",
        "$appData = Join-Path $env:APPDATA 'ZTools'",
        "& $createJunction (Join-Path $appData 'lmdb') 'lmdb'",
        "& $createJunction (Join-Path $appData 'plugins') 'plugins'",
        "& $createJunction (Join-Path $appData 'clipboard') 'clipboard'"
    ],
    "persist": [
        "lmdb",
        "plugins",
        "clipboard"
    ],
    "checkver": {
        "github": "https://github.com/ZToolsCenter/ZTools"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/ZToolsCenter/ZTools/releases/download/v$version/ZTools-$version-win-x64.zip"
            }
        }
    }
}
